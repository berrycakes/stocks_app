<p id="notice"><%= notice %></p>

<h1>Traders</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Mobile number</th>
      <th>Approved</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @traders.each do |trader| %>
      <tr>
        <td><%= trader.first_name %></td>
        <td><%= trader.last_name %></td>
        <td><%= trader.mobile_number %></td>
        <td><%= trader.approved %></td>
        <td><%= trader.user_id %></td>
        <td><%= link_to 'Show', trader %></td>
        <td><%= link_to 'Edit', edit_trader_path(trader) %></td>
        <td><%= link_to 'Destroy', trader, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

