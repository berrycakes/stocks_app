%table.table.table-striped.table-bordered.align-middle.caption-top
  %caption
    List of Traders
  %thead
    %tr
      %th Name
      %th Email
      %th Mobile number
      %th Approved
      %th
  %tbody
    - @traders.each do |trader|
      %tr
        %td #{trader.first_name} #{trader.last_name}
        %td= link_to "#{trader.user.email}", trader
        %td= trader.mobile_number
        - if trader.approved
          %td Approved
        - else 
          %td= button_to 'Approve Account', trader_approved_path(trader), method: :patch, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-primary'
        %td= link_to 'Edit', admin_edit_trader_path(trader.user), class: 'btn btn-outline-primary'
