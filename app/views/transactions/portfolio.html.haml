%p#notice= notice
%h1 Portfolio
%table.table
  %thead
    %tr
      %th User
      %th.text-center{:colspan => "3"} Stock
      %th Price
      %th Stock shares 
      %th Purchase Value
      %th Current Value
      %th % Change
      %th Profit / Loss
      %th{:colspan => "3"}
  %tbody
    - @transactions.each do |transaction|
      %tr
        %td= transaction.trader_id
        %td= image_tag(transaction.stock_image, :size =>'30x30')
        %td= transaction.stock_name
        %td= transaction.stock_symbol.upcase
        %td= number_to_currency(transaction.current_price, unit: "₱ ", separator: ".", delimiter: ",").to_s
        %td= transaction.stock_share
        %td= number_to_currency(transaction.purchase_value, unit: "₱ ", separator: ".", delimiter: ",").to_s
        %td= number_to_currency(transaction.current_value, unit: "₱ ", separator: ".", delimiter: ",").to_s
        - if transaction.percent_change > 0 
          %td.text-success= number_to_percentage(transaction.percent_change)
          %td.text-success= number_to_currency(transaction.profit_loss, unit: "₱ ", separator: ".", delimiter: ",").to_s
        - else
          %td.text-danger= number_to_percentage(transaction.percent_change)
          %td.text-danger= number_to_currency(transaction.profit_loss, unit: "₱ ", separator: ".", delimiter: ",").to_s
        %td= link_to 'Show', transaction
        %td= link_to 'Edit', edit_transaction_path(transaction)
        %td= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'Stocks', stocks_path
