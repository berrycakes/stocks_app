= form_with(model: admin) do |form|
  - if admin.errors.any?
    #error_explanation
      %h2
        = pluralize(admin.errors.count, "error")
        prohibited this admin from being saved:
      %ul
        - admin.errors.each do |error|
          %li= error.full_message
  .field.form-floating.mb-4.col-6
    = form.text_field :first_name, class: 'form-control', placeholder: 'First Name'
    = form.label :first_name, 'First Name', class: 'form-label'
  .field.form-floating.mb-4.col-6
    = form.text_field :last_name, class: 'form-control', placeholder: 'Last Name'
    = form.label :last_name, 'Last Name', class: 'form-label'
  .field.form-floating.mb-4.col-6
    = form.text_field :mobile_number, class: 'form-control', placeholder: 'Mobile Number'
    = form.label :mobile_number, 'Mobile Number', class: 'form-label'
  .actions
    = form.submit 'Update', class: 'btn btn-outline-primary mb-3'
