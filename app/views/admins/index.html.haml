%p#notice= notice
%h1 Admins
%table
  %thead
    %tr
      %th First name
      %th Last name
      %th Mobile number
      %th User
      %th{:colspan => "3"}
  %tbody
    - @admins.each do |admin|
      %tr
        %td= admin.first_name
        %td= admin.last_name
        %td= admin.mobile_number
        %td= admin.user_id
        %td= link_to 'Show', admin
        %td= link_to 'Edit', edit_admin_path(admin)
        %td= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Admin', new_admin_path
